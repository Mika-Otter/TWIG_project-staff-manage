{% extends "../base.twig" %}

{% block style %}
<link rel="stylesheet" href="./assets/styles/home.css">
{% endblock %}

{% block main %}
<main>
    <section class="title__section">
        <div class="title__ctn">
            <h1>Welcome,</h1>
            <h2>in Empleez !</h2>
        </div>
        <span>Manage your team and more.</span>
    </section>
    <section class="connexion__big_box">
        <div class="connexion__box">
            <div class="form__ctn">
            
                <form>
                    <div class="form__input_ctn">
                        <label for="username">Nom d'utilisateur</label>
                        <input type="text" name="username" id="username" />
                    </div>
                    <div class="form__input_ctn">
                        <label for="password">Mot de passe</label>
                        <input type="password" name="password" id="password" />
                    </div>
                </form>
                <div class="btn__ctn">
                    <button type="submit" id="connexionBtn">Se connecter</button>
                    <button type="button" id="inscriptionBtn">S'incrire</button>
                </div>
            </div>
        </div>
    </section>
</main>
{% endblock %}